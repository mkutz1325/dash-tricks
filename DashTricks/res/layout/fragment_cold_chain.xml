<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border" >

    <WebView
        android:id="@+id/coldWebViewMain"
        android:layout_width="0dp"
        android:layout_height="471dp"
        android:layout_gravity="left"
        android:layout_weight="1.50"
        android:focusable="true" />

   <LinearLayout
        android:id="@+id/coldSideBarMain"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="#88B4D8E7" >
        
        <TextView 
    	    android:id="@+id/coldInstructions"
    	    android:text="@string/instr"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:background="#CCCCEE"
    	    android:textSize="20sp"
    	    android:textColor="#000000"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
    	<TextView 
    	    android:id="@+id/coldVaccineName"
    	    android:layout_width="fill_parent"
    	    android:visibility="gone"
    	    android:layout_height="match_parent"
    	    android:background="#CCCCEE"
    	    android:textSize="20sp"
    	    android:textColor="#000000"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
    	<Button
    	    android:id="@+id/coldBySub"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:visibility="gone"
    	    android:background="#881111FF"
    	    android:textSize="20sp"
    	    android:text="@string/showBySub"
    	    android:textColor="#FFFFFF"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
    	<Button
    	    android:id="@+id/coldByMonth"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:visibility="gone"
    	    android:background="#881111FF"
    	    android:textSize="20sp"
    	    android:text="@string/showByMonth"
    	    android:textColor="#FFFFFF"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />

		<Button
		    android:id="@+id/coldLoadButton"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/button_load"
		    android:textColor="#FFFFFF"
		    android:background="#881111FF" />
		
    	<TextView 
    	    android:id="@+id/coldStockDesc"
    	    android:layout_width="fill_parent"
    	    android:visibility="gone"
    	    android:layout_height="match_parent"
    	    android:background="#CCCCEE"
    	    android:textSize="20sp"
    	    android:textColor="#000000"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
		<WebView
	        android:id="@+id/coldSsmallWebView"
	        android:layout_width="0dp"
	        android:layout_height="150dp"
	        android:visibility="gone"
	        android:background="#88B4D8E7" />
    
    </LinearLayout>

</LinearLayout>

