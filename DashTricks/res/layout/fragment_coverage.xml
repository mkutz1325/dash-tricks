<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border" >

    <WebView
        android:id="@+id/webView1"
        android:layout_width="0dp"
        android:layout_height="471dp"
        android:layout_gravity="left"
        android:layout_weight="1.50"
        android:focusable="true" />

   <LinearLayout
        android:id="@+id/sideBar1"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="#88B4D8E7" >
        
        <TextView 
    	    android:id="@+id/instructions"
    	    android:text="@string/instr"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:background="#88D3D3D3"
    	    android:textSize="20sp"
    	    android:textColor="#FFFFFF"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
    	<TextView 
    	    android:id="@+id/vaccineName"
    	    android:layout_width="fill_parent"
    	    android:visibility="gone"
    	    android:layout_height="match_parent"
    	    android:background="#88D3D3D3"
    	    android:textSize="20sp"
    	    android:textColor="#FFFFFF"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
    	<Button
    	    android:id="@+id/bySub"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:visibility="gone"
    	    android:background="#881111FF"
    	    android:textSize="20sp"
    	    android:text="@string/showBySub"
    	    android:textColor="#FFFFFF"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />
    	
    	<Button
    	    android:id="@+id/byMonth"
    	    android:layout_width="fill_parent"
    	    android:layout_height="match_parent"
    	    android:visibility="gone"
    	    android:background="#881111FF"
    	    android:textSize="20sp"
    	    android:text="@string/showByMonth"
    	    android:textColor="#FFFFFF"
    	    android:padding="20dp"
	        android:layout_marginBottom="2dp" />

		<Button
		    android:id="@+id/button_load"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/button_load"
		    android:textColor="#FFFFFF"
		    android:background="#881111FF" />
		
		<WebView
	        android:id="@+id/smallWebView"
	        android:layout_width="0dp"
	        android:layout_height="150dp"
	        android:visibility="gone"
	        android:background="#88B4D8E7" />
    
    </LinearLayout>

</LinearLayout>