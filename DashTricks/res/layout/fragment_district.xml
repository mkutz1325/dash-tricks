<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border" >

    <WebView
        android:id="@+id/districtMap"
        android:layout_width="0dp"
        android:layout_height="471dp"
        android:layout_gravity="left"
        android:layout_weight="1.50" />

   	<LinearLayout
   	    android:id="@+id/sideBar1"
   	    android:layout_width="0dp"
   	    android:layout_height="fill_parent"
   	    android:layout_gravity="right"
   	    android:layout_weight=".5"
   	    android:background="#CCCCEE"
   	    android:orientation="vertical" >

   	    <TextView
   	        android:id="@+id/districtName"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:background="#CCCCEE"
   	        android:padding="20dp"
   	        android:textColor="#000000"
   	        android:textSize="20sp" />
   	    
   	    <TextView
   	        android:id="@+id/summary"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:text="@string/summary"
   	        android:background="#4444FF"
   	        android:padding="10dp"
   	        android:textColor="#FFFFFF"
   	        android:textSize="25sp"
   	        android:layout_marginBottom="2dp" />
   	    
   	    <TextView
   	        android:id="@+id/population"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:background="#4444FF"
   	        android:padding="20dp"
   	        android:textColor="#FFFFFF"
   	        android:textSize="15sp" />
   	    
   	    <TextView
   	        android:id="@+id/monthly_births"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:background="#4444FF"
   	        android:padding="20dp"
   	        android:textColor="#FFFFFF"
   	        android:textSize="15sp" />
   	    
   	    <TextView
   	        android:id="@+id/surviving_infants_month"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:background="#4444FF"
   	        android:padding="20dp"
   	        android:textColor="#FFFFFF"
   	        android:textSize="15sp" />
   	    
   	    <TextView
   	        android:id="@+id/num_sub_districts"
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:background="#4444FF"
   	        android:padding="20dp"
   	        android:textColor="#FFFFFF"
   	        android:textSize="15sp" />
   	    
   	    <TextView
   	        android:id="@+id/num_health_facilities"
   	        android:layout_width="fill_parent"
   	        android:layout_height="fill_parent"
   	        android:background="#4444FF"
   	        android:padding="20dp"
   	        android:textColor="#FFFFFF"
   	        android:textSize="15sp" />
   	</LinearLayout>

</LinearLayout>